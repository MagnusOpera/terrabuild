
project {
    ignores = [ "deploy.log" ]
    labels = ["infra"]
    
    @terraform { }
}

target build {
    @terraform init { }
    @terraform plan { 
        variables = { dotnet_app_version: project.dotnet_app.version
                     npm_app_version: project.npm_app.version }
    }
}

target deploy {
    @terraform init { }
    @terraform apply { }
}
