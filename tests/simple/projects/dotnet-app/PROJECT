
extension @docker {
    defaults {
        image = "ghcr.io/magnusopera/dotnet-app"
        arguments = { configuration: local.configuration }
    }
}

project dotnet_app {
    labels = [ "app"
               "dotnet" ]

    includes = [ "**/*"
                 "../shared-folder/**/*" ]

    environments = [ "dev" ]

    @dotnet { }
}

target build {
#    @shell echo { arguments: "Building project"}
    @dotnet restore { dependencies = true }
    @dotnet build { dependencies = true }
#    @shell echo { arguments: "Building done"}
}

target dist {
    @dotnet restore { dependencies = true }
    @dotnet publish { }
}

target docker {
    @docker build { }
}
